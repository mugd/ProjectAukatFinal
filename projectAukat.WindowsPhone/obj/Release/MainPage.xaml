        <Image  HorizontalAlignment="Stretch" Height="170" Margin="0,80,0,0" VerticalAlignment="Top" Width="277" RequestedTheme="Light" Source="Assets/logomain.png"/>
        <UI:AdControl AutoRefreshIntervalInSeconds="60" VerticalAlignment="Top" ApplicationId="46646d68-87e2-4433-8593-0761c32aae92" AdUnitId="11380626" HorizontalAlignment="Stretch" Height="50" IsAutoRefreshEnabled="True" Margin="0,0,0,0" Width="380"/>
        
        <UI:AdControl AutoRefreshIntervalInSeconds="60" ApplicationId="46646d68-87e2-4433-8593-0761c32aae92" AdUnitId="11380624" HorizontalAlignment="Stretch" Height="50" IsAutoRefreshEnabled="True" Margin="0,0,0,80"  VerticalAlignment="Bottom" Width="390"/>
        
        <UI:AdControl AutoRefreshIntervalInSeconds="60" ApplicationId="46646d68-87e2-4433-8593-0761c32aae92" AdUnitId="11380622" HorizontalAlignment="Stretch" Height="50" IsAutoRefreshEnabled="True" Margin="0,0,0,150" VerticalAlignment="Bottom" Width="380"/>
    </Grid>
</Page>

